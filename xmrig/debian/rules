#!/usr/bin/make -f
# Simple debhelper rules for xmrig-remote (amd64)

export DH_VERBOSE=1

%:
	dh $@

override_dh_auto_configure:
	dh_auto_configure --builddirectory=build -- \
		-DWITH_REMOTE=ON \
		-DWITH_OPENCL=OFF \
		-DWITH_CUDA=OFF \
		-DWITH_HWLOC=OFF

override_dh_auto_build:
	dh_auto_build --builddirectory=build

override_dh_auto_install:
	install -D -m 0755 build/xmrig debian/xmrig-remote/usr/bin/xmrig
